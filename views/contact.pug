extends base.pug

block scripts
  script(src='/static/script.js')

block style
  style
    include ../static/style.css
    include ../static/contact.css

block content
    h2 Contact US
    div.container
      form(action="/contact", method="post", class="myform")
        input(type="text", name="name" ,class="myinput" ,placeholder="Name")
        input(type="phone", name="phone" ,class="myinput" ,placeholder=" Phone Number")
        input(type="email", name="email" ,class="myinput" ,placeholder="Email")
        input(type="text", name="address" ,class="myinput" ,placeholder="Address")
        button(class="btn")
          | Submit